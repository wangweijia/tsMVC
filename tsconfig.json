{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "lib": [
      "esnext", "es2015", "dom"
    ],
    "moduleResolution": "node",
    "types": ["node"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}

